{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "clipper-gui",
	"version": "0.1.0",
	"identifier": "flazepe.clipper-gui",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "clipper-gui",
				"minWidth": 1600,
				"minHeight": 900
			}
		],
		"security": {
			"csp": null,
			"assetProtocol": {
				"enable": true,
				"scope": ["*"]
			}
		}
	},
	"bundle": {
		"linux": {
			"appimage": {
				"bundleMediaFramework": true
			}
		},
		"active": true,
		"targets": "all"
	}
}
