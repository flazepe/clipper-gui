{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		{
			"identifier": "shell:allow-spawn",
			"allow": [
				{ "name": "ffmpeg", "cmd": "ffmpeg", "args": true },
				{ "name": "ffprobe", "cmd": "ffprobe", "args": true }
			]
		},
		"shell:allow-kill",
		"dialog:default"
	]
}
