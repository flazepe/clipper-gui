{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		{
			"identifier": "shell:allow-spawn",
			"allow": [
				{
					"name": "clipper",
					"cmd": "clipper",
					"args": true
				},
				{
					"name": "ffmpeg",
					"cmd": "ffmpeg",
					"args": true
				}
			]
		},
		"shell:allow-kill",
		"dialog:default"
	]
}
